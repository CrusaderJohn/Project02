<div class="container-fluid">
    <div class="row g-3">
        <div class="col-12 col-md-6">
            <form class="new-taxReport-form card">
                <div class="card-body">
                    <h3 class="card-title">Tax Report</h3>
                    <p class="card-text">Fill in your tax information!</p>
                    <div class="row mb-3">
                        <label for="inputYear" class="col-sm-5 col-form-label">Enter year:</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="inputYear">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputIncome" class="col-sm-5 col-form-label">Enter income:</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="inputIncome">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" id="submit" class="btn btn-primary">Submit</button>
                        <button type="submit" class="btn btn-secondary">Save</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Year</th>
                    <th>Income</th>
                </tr>
                </thead>
                <tbody>
                {{#each taxReports as |taxReport|}}
                    <tr>
                        <td>{{taxReport.year}}</td>
                        <td>{{taxReport.income}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="./js/taxInputs.js"></script>