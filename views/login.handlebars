<div class="container mt-3">
    <h2>Login</h2>
    <form class="login-form">
        <div class="mb-3 mt-3 col-sm-3">
            <label for="email-login">Email:</label>
            <input type="email" class="form-control" id="email-login" placeholder="Enter email" name="email">
        </div>
        <div class="mb-3 col-sm-3">
            <label for="password-login">Password:</label>
            <input type="password" class="form-control" id="password-login" placeholder="Enter password" name="pswd">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="./js/login.js"></script>
