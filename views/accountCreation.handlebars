<div class="container mt-3">
    <h2>Account Creation</h2>
    <form class="signup-form">
        <div class="mb-3 mt-3">
            <label for="name-signup">Name:</label>
            <input type="text" class="form-control" id="name-signup" placeholder="Enter your name!" name="email">
        </div>
        <div class="mb-3 mt-3">
            <label for="email-signup">Email:</label>
            <input type="email" class="form-control" id="email-signup" placeholder="Enter your email!" name="email">
        </div>
        <div class="mb-3">
            <label for="password-signup">Password:</label>
            <input type="password" class="form-control" id="password-signup" placeholder="Enter your password!" name="pswd">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="./js/accountCreation.js"></script>
